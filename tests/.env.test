# Test environment variables for docker-compose test stack
# This file is used by CI to ensure the server exposes the API-mounted health endpoint
# Keep values non-sensitive and safe for local runs

# API and health ports - set HEALTH_PORT == API_PORT so API-mounted health endpoints are registered
VPN_SENTINEL_SERVER_API_PORT=5000
VPN_SENTINEL_SERVER_HEALTH_PORT=5000
VPN_SENTINEL_SERVER_DASHBOARD_PORT=5001

# API path used in tests
VPN_SENTINEL_API_PATH=/test/v1

# Test API key (non-sensitive placeholder)
VPN_SENTINEL_API_KEY=test-api-key-abcdef123456789

# Disable Telegram integration during tests
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Run server in HTTP for tests
VPN_SENTINEL_TLS_CERT_PATH=
VPN_SENTINEL_TLS_KEY_PATH=
VPN_SENTINEL_API_KEY=test-api-key-abcdef123456789
VPN_SENTINEL_SERVER_API_PORT=5000
VPN_SENTINEL_SERVER_DASHBOARD_PORT=5001
VPN_SENTINEL_SERVER_DASHBOARD_ENABLED=true
VPN_SENTINEL_API_PATH=/test/v1
VPN_SENTINEL_SERVER_ALERT_THRESHOLD_MINUTES=15
VPN_SENTINEL_SERVER_CHECK_INTERVAL_MINUTES=5
VPN_SENTINEL_SERVER_RATE_LIMIT_REQUESTS=100
VPN_SENTINEL_SERVER_ALLOWED_IPS=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
VPN_SENTINEL_CLIENT_ID=test-client
VPN_SENTINEL_URL=http://localhost:5000
TZ=UTC
LOG_LEVEL=DEBUG
