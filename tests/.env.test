# Test Environment Configuration for VPN Sentinel
# This file is used for running tests in isolated environments

# API Configuration for Testing
VPN_SENTINEL_API_KEY=test-api-key-abcdef123456789
VPN_SENTINEL_SERVER_API_PORT=5000
VPN_SENTINEL_SERVER_DASHBOARD_PORT=5001
VPN_SENTINEL_SERVER_DASHBOARD_ENABLED=true

# Test-specific API path (different from production)
VPN_SENTINEL_SERVER_API_PATH=/test/v1

# Monitoring Configuration
VPN_SENTINEL_ALERT_THRESHOLD_MINUTES=15
VPN_SENTINEL_CHECK_INTERVAL_MINUTES=5

# Test Telegram Configuration (use test bot)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Test Client Configuration
VPN_SENTINEL_CLIENT_ID=test-client
VPN_SENTINEL_SERVER_API_BASE_URL=http://localhost:5000

# Timezone
TZ=UTC

# Security (disabled for testing)
VPN_SENTINEL_RATE_LIMIT_PER_MINUTE=100
VPN_SENTINEL_IP_WHITELIST_ENABLED=false

# Logging (verbose for testing)
LOG_LEVEL=DEBUG