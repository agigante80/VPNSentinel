# VPN Sentinel Client Environment Variables
# Copy this file to .env and customize the values for your deployment

# REQUIRED: Base URL of the monitoring server
# Default: http://your-server-url:5000
VPN_SENTINEL_URL=http://your-server-url:5000

# OPTIONAL: API path prefix for server endpoints
# Default: /api/v1
VPN_SENTINEL_API_PATH=/api/v1

# OPTIONAL: Unique client identifier (kebab-case, auto-generated if empty)
# Default: vpn-client-{timestamp}{random}
VPN_SENTINEL_CLIENT_ID=your-client-name

# OPTIONAL: Bearer token for server authentication
# Default: (none - no authentication)
VPN_SENTINEL_API_KEY=your-api-key-here

# OPTIONAL: Timezone for timestamp formatting
# Default: UTC
TZ=UTC

# OPTIONAL: Path to custom TLS certificate for HTTPS verification
# Default: (none - trusts self-signed certificates)
VPN_SENTINEL_TLS_CERT_PATH=/certs/vpn-sentinel-cert.pem

# OPTIONAL: Enable debug logging with raw API responses
# Default: false
VPN_SENTINEL_DEBUG=false

# OPTIONAL: Geolocation service selection
# Default: auto (tries ipinfo.io first, falls back to ip-api.com)
# Options: auto, ipinfo.io, ip-api.com
VPN_SENTINEL_GEOLOCATION_SERVICE=auto