# VPN Sentinel Server Environment Variables
# Copy this file to .env and customize the values for your deployment

# OPTIONAL: API key for client authentication (leave empty to disable authentication)
# Default: (empty - authentication disabled)
VPN_SENTINEL_API_KEY=your-secure-api-key-here

# OPTIONAL: Telegram bot token for notifications (leave empty to disable)
# Default: (empty - notifications disabled)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# OPTIONAL: Telegram chat ID for notifications (leave empty to disable)
# Default: (empty - notifications disabled)
TELEGRAM_CHAT_ID=your-telegram-chat-id

# OPTIONAL: API path prefix for endpoints
# Default: /api/v1
VPN_SENTINEL_API_PATH=/api/v1

# OPTIONAL: Comma-separated list of allowed IP addresses (leave empty for no restrictions)
# Default: (empty - all IPs allowed)
VPN_SENTINEL_SERVER_ALLOWED_IPS=192.168.1.100,10.0.0.50

# OPTIONAL: Maximum requests per IP address per minute
# Default: 30
VPN_SENTINEL_SERVER_RATE_LIMIT_REQUESTS=30

# OPTIONAL: Minutes before considering a client offline and sending alerts
# Default: 15
VPN_SENTINEL_SERVER_ALERT_THRESHOLD_MINUTES=15

# OPTIONAL: How often to check client status in background (minutes)
# Default: 5
VPN_SENTINEL_SERVER_CHECK_INTERVAL_MINUTES=5

# OPTIONAL: Port for API server (client connections)
# Default: 5000
VPN_SENTINEL_SERVER_API_PORT=5000

# OPTIONAL: Port for web dashboard
# Default: 8080
VPN_SENTINEL_SERVER_DASHBOARD_PORT=8080

# OPTIONAL: Enable/disable web dashboard
# Default: true
VPN_SENTINEL_SERVER_DASHBOARD_ENABLED=true

# OPTIONAL: Timezone for timestamps and logging
# Default: UTC
TZ=UTC

# OPTIONAL: Path to TLS certificate file for HTTPS
# Default: (none - HTTP only)
VPN_SENTINEL_TLS_CERT_PATH=/path/to/server.crt

# OPTIONAL: Path to TLS private key file for HTTPS
# Default: (none - HTTP only)
VPN_SENTINEL_TLS_KEY_PATH=/path/to/server.key